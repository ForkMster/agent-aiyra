# Farcaster Configuration
FARCASTER_FID=your-fid-here
FARCASTER_NEYNAR_API_KEY=your-neynar-api-key
FARCASTER_SIGNER_UUID=your-signer-uuid
FARCASTER_MODE=webhook

# Agent Configuration
ENABLE_CAST=true
CAST_INTERVAL_MIN=90
CAST_INTERVAL_MAX=180
MAX_CAST_LENGTH=320
ENABLE_ACTION_PROCESSING=true
ACTION_INTERVAL=5

# Weather API (for Weather Whisper)
WEATHER_API_KEY=your-weather-api-key

# Serverless Runtime
# NODE_ENV=production
# Note: Do NOT set PORT on Vercel; it is managed by the platform.

# Persistent Idempotency (choose one provider)
# Vercel KV (recommended on Vercel):
# KV_REST_API_URL=your-vercel-kv-rest-url
# KV_REST_API_TOKEN=your-vercel-kv-rest-token
# Upstash Redis (alternative):
# UPSTASH_REDIS_REST_URL=your-upstash-rest-url
# UPSTASH_REDIS_REST_TOKEN=your-upstash-rest-token
# Optional TTL override (ms), default ~14 days
# HANDLED_TTL_MS=1209600000

# Custom Settings
DAILY_GREETING=true
USE_PASTEL_EMOJIS=true